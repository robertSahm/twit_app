<h1>Sign in (sessions/new layout)</h1>
<h6><i><n>presently all log-ins must be CASE SENSITIVE - please beware </n></i></h6>
<br>
	
    <%= form_for(:session, :url => sessions_path) do |f| %>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>
	<div class="actions">
		<%= f.submit "Sign in" %>
	</div>
	<div class="field">
		<%= label_tag :remember_me %>
		<%= check_box_tag :remember_me, 1, params[:remember_me] %>
	</div>	
<% end %>
<br>
<p><%= link_to "Forgot Password?", new_password_reset_path %></p>
<p>New user? <%= link_to "Sign up now!", signup_path %></p>

			