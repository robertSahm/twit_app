<tr>
	<td class="gravatar">
		<%= link_to gravatar_for(feed_item.user), feed_item.user %>
	</td>
	<td class="micropost">
		<span class="user">
		<strong>	<%= link_to feed_item.user.name, feed_item.user %> </strong>
		</span>
		<span class="content"><%= feed_item.content %></span>
		<span class="timestamp">
		 <tt> Roasted <%= time_ago_in_words(feed_item.created_at) %> ago.</tt>
		</span>
	</td>
	<% if current_user?(feed_item.user) %>
	<td>
	<u><%= link_to "x", feed_item, :method => :delete,
				#						 :confirm => "You sure?",
										 :title => feed_item.content %>
	</u></td>
	<% end %>
</tr>										
				